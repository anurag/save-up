build:
  just graphql/build

start:
  DATABASE_URL=$DATABASE_URL sam local start-api -p 4010

package:
  sam package \
    --template-file template.yaml \
    --s3-bucket kic-api \
    --output-template-file packaged.yaml

deploy:
  sam deploy \
    --template-file ./packaged.yaml \
    --stack-name kic-api \
    --capabilities CAPABILITY_IAM
