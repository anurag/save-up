graph:
	just graph-app
	just graph-pub

graph-app:
	npx elm-graphql $API_HOST/graphql-app --base Api \
		--header "Authorization: Bearer $SYSTEM_JWT"

graph-pub:
	npx elm-graphql $API_HOST/graphql-pub --base ApiPub

elm-analyse:
	npx elm-analyse

elm-ts:
	npx elm-typescript-interop

test:
	npx elm-test

build:
	npx parcel build src/app.html

start:
	npx parcel -p 8080 src/app.html

graphiql:
	npx parcel -p 8080 src/graphiql.html
